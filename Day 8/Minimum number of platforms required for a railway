int findPlatform(int arr[], int dep[], int n)
    {
        sort ( arr, arr+n ) ;
        sort ( dep, dep+n ) ;
        int i = 1 , j = 0 , platform = 1 , Max = 1 ; 
        while ( i < n and j < n ){
            if ( arr[i] <= dep[j] )
            {
                platform++ ;
                i++ ; 
            }
            else{
                platform-- ;
                j++ ; 
            }
            Max = max ( Max , platform ) ;
        }
        return Max ; 
      
    }
